{
  "name": "mantle-monorepo",
  "version": "1.0.0",
  "description": "Mantle Monorepo",
  "private": true,
  "workspaces": [
    "facilitator",
    "usdc-faucet"
  ],
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "install:all": "pnpm install",
    "build:all": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "start": "pnpm -r start",
    "faucet": "pnpm --filter usdc-faucet dev",
    "faucet:install": "pnpm --filter usdc-faucet install",
    "faucet:build": "pnpm --filter usdc-faucet build",
    "faucet:start": "pnpm --filter usdc-faucet start"
  }
}
